

<div class="ui container">
  <div class="ui segment">
     <div class="ui huge header"><%= @article.title %></div>
     <div class="ui clearing divider"></div>
     <%= raw(@article.text) %>

     <div class="actions">
       <%  @article.tag_list.each do |t| %>
       <%=link_to t , tag_path(t) ,class: 'ui blue  label' %>
       <%end%>
     </div>
     <div class="ui horizontal statistic">
      <div class="value" id = "vote_count">
          <%= @article.reputation_for(:votes).to_i%>
        </div>
      <div class="label">
        Votes
      </div>
    </div>


    <% if current_user && !current_user.voted_for?(@article) %>
      | <%= link_to "up", vote_article_path(@article, type: "up") , method: :post , :remote => true%>
      | <%= link_to "down", vote_article_path(@article, type: "down"), method: :post  , :remote => true%>
    <% end %>


          <div id = "fav">
            <%= render "favorite_div" %>
          </div>

    <% if @article.visibility == "private" &&current_user.id == @article.user_id %>
      <div class="ui action input">
        <%= form_tag url_for(invite_articles_path), :remote => true do %>
          <%= select_tag "user_id", options_from_collection_for_select(@users, "id", "email") %>
          <%= hidden_field_tag :article_id, @article.id %>
          <%= hidden_field_tag :invite_accepted, 'false' %>
          <%= submit_tag "Invite" %>
        <% end %>
      </div>
      <div id ="invited"> </div>

    <% end %>


    <% if @article.user_id == current_user.id %>
      <%= link_to "Edit", edit_article_path(@article) %>


    <%= link_to 'Destroy', article_path(@article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    <% end %>

    <div class="ui middle aligned divided list">
      <% @sub_articles.each do |sub_article| %>
        <div class="item">
            <%= link_to sub_article.title , article_path(sub_article) %>
        </div>
      <% end %>
    </div>
    <%= link_to 'create subpost' , articles_new_path(:parent_type => @article.id) %>

    <div class="ui comments">
        <%= render 'comments/comment' %>
        <%= render 'comments/form' %>
    </div>


    <%= link_to 'Back', articles_path %>
</div>
</div>
