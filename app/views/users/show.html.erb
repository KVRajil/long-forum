


<div class="ui card">
  <div class="image">
    <img src="kristy.png">
  </div>
  <div class="content">
    <a class="header"><%= @user.username %></a>
    <div class="meta">
      <span class="date">Joined <%=time_ago_in_words(@user.created_at)%> ago </span>
    </div>
    <div class="description">
      <%= @user.username %> is an art director living in New York.
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      <%= @user.articles.count %> Posts
    </a>
  </div>
</div>


<% if @invites %>

<table class="ui basic table">
  <thead>
    <tr>
      <th>Topic</th>
      <th>Accept</th>
      <th>Reject</th>
    </tr>
  </thead>
  <tbody>
    <% @invites.each do |invite| %>
    <tr>
      <td><%=invite.article.title%></td>
      <td><%= link_to "accept", invite_accept_article_path(:invite_id => invite.id) ,method: :post%></td>
      <td><%= link_to "reject", invite_reject_article_path(:invite_id => invite.id) ,method: :delete%></td>
    </tr>
    <% end %>

  </tbody>
</table>

<% end %>
