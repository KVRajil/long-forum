

  <h3 class="ui dividing header">Comments</h3>
<% @article.comments.each do |comment| %>
  <div class="comment">
    <a class="avatar">
      <img data-name="<%=comment.commenter%>" class="initialjs-avatar"/>
    </a>


    <div class="content">
      <a class="author"><%=comment.commenter%></a>
      <div class="metadata">
        <span class="date"><%= time_ago_in_words(comment.created_at)  %> ago</span>
      </div>
      <div class="text comment">
        <%= raw comment.body %>
      </div>
      <div class="actions">
        Tags :
        <%  comment.tag_list.each do |t| %>
        <%=link_to t , tag_path(t) ,class: 'ui blue  label' %>
        <%end%>
      </div>
      <div class="actions" >
        <div id="comment_<%=comment.id%>">
          <%= pluralize comment.reputation_for(:votes).to_i, "vote" %>
        </div>
        <% if current_user && !current_user.voted_for?(comment) %>
        | <%= link_to "up", vote_comment_path(comment, type: "up"), method: "post"  , :remote => true%>
        | <%= link_to "down", vote_comment_path(comment, type: "down"), method: "post" , :remote => true %>
       <% end %>
      </div>
      <div>
      <% if comment.user_id == current_user.id || @article.user_id == current_user.id %>
        <%= link_to 'delete', [comment.article, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
      <% end %>
      </div>
   </div>
</div>

<% end %>





<script type="text/javascript">
$(document).ready(function(){
  $('.initialjs-avatar').initial();
})
</script>
