<div class="comments">
  <div class="comment_body">
    <%= raw @comment.body %>
  </div>
  <div class="comment_info">
      <div class="time">
        <%= time_ago_in_words(@comment.created_at) %> ago by
      </div>
      <div class="author">
         <%= @comment.commenter %>
      </div>
  </div>
</div>
